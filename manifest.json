{
  "manifest_version": 2,
  "version": "1.2.0",
  "name": "JIRA Helper",
  "short_name": "Jira Helper",
  "description": "There is a JIRA helper to view charts.",
  "update_url": "https://clients2.google.com/service/update2/crx",
  "icons": {
    "16": "src/images/jira_icon_0.png",
    "48": "src/images/jira_icon_0.png",
    "128": "src/images/jira_icon_0.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "src/images/jira_icon_0.png"
  ],
  "content_scripts": [
    {
      "js": [
        "dist/scripts/main.min.js"
      ],
      "css": [
        "dist/css/inject.min.css"
      ],
      "matches": [
        "*://*/*",
        "file://*/*"
      ]
    }
  ],
  "offline_enabled": false
}
